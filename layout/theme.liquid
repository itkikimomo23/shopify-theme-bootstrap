<!doctype html>
<html>
<head>
    <title>{{ page_title }}</title>
    <link rel="canonical" href="{{ canonical_url }}">

    <!-- Metas -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no"> 

    <!-- Required by Shopify -->
    {{ content_for_header }}

    <!-- Styles/Scripts -->
    {{ 'bootstrap.min.css' | asset_url | stylesheet_tag }}
    {{ 'variables.css' | asset_url | stylesheet_tag }}
    {{ 'reboot.css' | asset_url | stylesheet_tag }}
    {{ 'shopify.css' | asset_url | stylesheet_tag }}
    {{ 'sections.css' | asset_url | stylesheet_tag }}

    <script>
        window.money_format = "{{ shop.money_format }}"
    </script>

    <script src="{{ 'bootstrap.bundle.min.js' | asset_url }}" defer></script>
    <script src="{{ 'helper.js' | asset_url }}" defer></script>
    <script src="{{ 'init.js' | asset_url }}" defer></script>

    {% if request.page_type == 'collection' %}
        {{ 'collection.css' | asset_url | stylesheet_tag }}
        <script src="{{ 'collection.js' | asset_url }}" defer></script>
    {% endif %}

    {% if request.page_type == 'product' %}
        {{ 'product.css' | asset_url | stylesheet_tag }}
        <script src="{{ 'product.js' | asset_url }}" defer></script>
    {% endif %}

    {{ 'custom.css' | asset_url | stylesheet_tag }}
</head>

<body class="{{ request.page_type | prepend: 'template-' }}">

    <!-- Skip link -->
    <a class="visually-hidden-focusable" href="#main">
        {{ 'general.accessibility.skip_content' | t }}
    </a>

    <!-- Top sections -->
    {% section 'announcement' %}
    {% section 'navbar' %}

    <!-- Main -->
    <main role="main">
        {{ content_for_layout }}
    </main>

    <!-- Bottom sections -->

    <!-- Bottom includes -->
    {% render 'toast' %}
    
</body>
</html>
