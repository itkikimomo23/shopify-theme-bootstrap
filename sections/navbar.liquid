<nav class="navbar navbar-expand-lg shadow-sm {{ section.settings.color }}">
    <div class="container">
        <a class="navbar-brand py-0" href="{{ routes.root_url }}">
            {% if section.settings.logo == blank %}
                {{ shop.name }}
            {% else %}
                <img 
                    src="{{ section.settings.logo | img_url: 'x40', crop: 'center', scale: 2 }}" 
                    alt="{{ section.settings.logo.alt | default: shop.name }}"
                    width="{{ 40 | times: section.settings.logo.aspect_ratio | round }}" 
                    height="40">
            {% endif %}
        </a>
        <button 
            class="navbar-toggler" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#navbar-collapse" 
            aria-controls="navbar-collapse" 
            aria-expanded="false" 
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar-collapse">
            <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                {% for link in linklists[section.settings.menu].links %}
                    {% if link.links == blank %}
                        <li class="nav-item">
                            <a 
                                class="nav-link {% if link.active %}active{% endif %}" 
                                aria-current="{% if link.active %}page{% endif %}" 
                                href="{{ link.url }}">
                                {{ link.title }}
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item dropdown">
                            <a 
                                class="nav-link dropdown-toggle {% if link.child_active %}active{% endif %}" 
                                href="#" 
                                id="navbar-item-{{ forloop.index }}" 
                                role="button" 
                                data-bs-toggle="dropdown" 
                                aria-expanded="false">
                                {{ link.title }}
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbar-item-{{ forloop.index }}">
                                {% for child_link in link.links %}
                                    <li>
                                        {% if child_link.title == '-' %}
                                            <hr class="dropdown-divider">
                                        {% else %}
                                            <a 
                                                class="dropdown-item  {% if child_link.active %}active{% endif %}" 
                                                href="{{ child_link.url }}"
                                                aria-current="{% if child_link.active %}page{% endif %}">
                                                {{ child_link.title }}
                                            </a>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
            <ul class="navbar-nav">
                {% if shop.customer_accounts_enabled %}
                    <li class="nav-item">
                        <a 
                            class="nav-link {% if template.name == 'login' or template.name == 'account' %}active{% endif %}" 
                            aria-current="{% if template.name == 'login' or template.name == 'account' %}page{% endif %}" 
                            href="{{ routes.account_url }}"
                            aria-label="{{ 'account.label' | t }}">
                            {% render 'icon-account', size: 22 %}
                        </a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a 
                        class="nav-link {% if template.name == 'search' %}active{% endif %}" 
                        aria-current="{% if template.name == 'search' %}page{% endif %}" 
                        href="{{ routes.search_url }}"
                        aria-label="{{ 'search.label' | t }}">
                        {% render 'icon-search', size: 22 %}
                    </a>
                </li>
                <li class="nav-item">
                    <a 
                        class="nav-link {% if template.name == 'cart' %}active{% endif %}" 
                        aria-current="{% if template.name == 'cart' %}page{% endif %}" 
                        href="{{ routes.cart_url }}"
                        aria-label="{{ 'cart.label' | t }}">
                        {% render 'icon-cart', size: 22 %}
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

{% schema %}
{
    "name": "Navbar",
    "class": "sticky-top",
    "settings": [
        {
            "type": "select",
            "id": "color",
            "label": "Color",
            "options": [
                { "value": "bg-white navbar-light", "label": "White" },
                { "value": "bg-light navbar-light", "label": "Light" },
                { "value": "bg-dark navbar-dark", "label": "Dark" },
                { "value": "bg-primary navbar-dark", "label": "Primary" },
                { "value": "bg-secondary navbar-dark", "label": "Secondary" }
            ],
            "default": "bg-white navbar-light"
        },
        {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"   
        },
        {
            "type": "link_list",
            "id": "menu",
            "label": "Menu",
            "default": "main-menu"
        }
    ]
}
{% endschema %}