{% liquid
    assign mt = section.settings.mt | prepend: 'mt-'
    assign mb = section.settings.mb | prepend: 'mb-'

    assign row_xs =  section.settings.row_xs | prepend: 'row-cols-'
    assign row_sm =  section.settings.row_sm | prepend: 'row-cols-sm-'
    assign row_lg =  section.settings.row_lg | prepend: 'row-cols-lg-'

    assign img_width  = 600
    assign img_height = 300
%}

<section id="blog-{{ section.id }}" class="blog {{ mt }} {{ mb }}">
    <div class="container">
        <h1 class="title text-center mb-4 {{ section.settings.title_size }}">
            {{ blog.title }}
        </h1>
        {% if section.settings.show_filter_by %}
            <div class="input-group justify-content-center mb-8">
                <label class="input-group-text" for="blog-tag-select">
                    {{ 'blogs.filter_by' | t }}
                </label>
                <select
                    id="blog-tags-select"
                    class="form-select w-auto flex-grow-0"
                    style="min-width: 140px;"
                    onchange="javascript:location.href = window.location.href = this.value">
                    <option value="{{ blog.url }}">
                        {{ 'blogs.all_topics' | t }}
                    </option>
                    {% for tag in blog.all_tags %}
                        <option value="{{ blog.url }}/tagged/{{ tag | handleize }}" {% if current_tags contains tag %}selected{% endif %}>
                            {{ tag }}
                        </option>
                    {% endfor %}
                </select>
            </div>
        {% endif %}
        {% paginate blog.articles by section.settings.limit %}
            <ul class="blog-list list-unstyled row mx-n3 {{ row_xs }} {{ row_sm }} {{ row_lg }}">
                {% for article in blog.articles %}
                    <li class="col p-3">
                        <div class="card h-100">
                            <a class="" href="{{ article.url }}">
                                <img
                                    class="img-fluid card-img-top"
                                    src="{{ article.image.src | image_url: width: img_width, height: img_height }}"
                                    alt="{{ article.image.alt | escape }}"
                                    width="{{ img_width }}"
                                    height="{{ img_height }}"
                                    loading="lazy">
                            </a>
                            <div class="card-body">
                                <h3 class="title {{ section.settings.article_title_size }} mb-0">
                                    <a href="{{ article.url }}" class="">
                                        {{ article.title }}
                                    </a>
                                </h3>
                                {% if section.settings.show_article_meta %}
                                    <p class="article-meta text-muted mt-3 mb-0 small">
                                        {{ article.author }} @ {{ article.created_at | time_tag: '%b %d, %Y' }}
                                    </p>
                                {% endif %}
                                {% if section.settings.show_article_excerpt %}
                                    <div class="article-excerpt rte mt-3">
                                        {{ article.excerpt }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
            {% render 'pagination' with paginate: paginate %}
        {% endpaginate %}
    </div>
</div>

{% schema %}
{
    "name": "Blog template",
    "settings": [
        {
            "type": "header",
            "content": "General"
        },
        {
            "type": "select",
            "id": "title_size",
            "label": "Title size",
            "default": "h1",
            "options": [
                { "value": "h1", "label": "H1" },
                { "value": "h2", "label": "H2" },
                { "value": "h3", "label": "H3" },
                { "value": "h4", "label": "H4" },
                { "value": "h5", "label": "H5" },
                { "value": "h6", "label": "H6" }
            ]
        },
        {
            "type": "range",
            "id": "limit",
            "label": "Posts per page",
            "min": 10,
            "max": 50,
            "default": 40
        },
        {
            "type": "checkbox",
            "id": "show_filter_by",
            "label": "Show filter by",
            "default": true
        },
        {
            "type": "select",
            "id": "article_title_size",
            "label": "Article title size",
            "default": "h5",
            "options": [
                { "value": "h1", "label": "H1" },
                { "value": "h2", "label": "H2" },
                { "value": "h3", "label": "H3" },
                { "value": "h4", "label": "H4" },
                { "value": "h5", "label": "H5" },
                { "value": "h6", "label": "H6" }
            ]
        },
        {
            "type": "checkbox",
            "id": "show_article_meta",
            "label": "Show article meta",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "show_article_excerpt",
            "label": "Show article excerpt",
            "default": true
        },
        {
            "type": "header",
            "content": "Items per row"
        },
        {
            "type": "range",
            "id": "row_xs",
            "label": "Mobile",
            "info": "up to 575px",
            "min": 1,
            "max": 3,
            "step": 1,
            "default": 1
        },
        {
            "type": "range",
            "id": "row_sm",
            "label": "Tablet",
            "info": "576px - 991px",
            "min": 1,
            "max": 4,
            "step": 1,
            "default": 2
        },
        {
            "type": "range",
            "id": "row_lg",
            "label": "Desktop",
            "info": "992px and up",
            "min": 1,
            "max": 6,
            "step": 1,
            "default": 3
        },
        {
            "type": "header",
            "content": "Spacing"
        },
        {
            "type": "range",
            "id": "mt",
            "label": "Margin top",
            "min": 0,
            "max": 20,
            "step": 1,
            "default": 10
        },
        {
            "type": "range",
            "id": "mb",
            "label": "Margin bottom",
            "min": 0,
            "max": 20,
            "step": 1,
            "default": 10
        }
    ],
    "presets": [
        {
            "name": "Blog template",
            "category": "Blog page"
        }
    ]
}
{% endschema %}