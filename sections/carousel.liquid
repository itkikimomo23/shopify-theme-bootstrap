<div class="{% if section.settings.container %}container{% endif %}">

  <div
    id="{{ 'carousel-' | append: section.id }}"
    class="carousel {{ section.settings.transition | escape }} {{ section.settings.margin_top | prepend: 'mt-' }} {{ section.settings.margin_bottom | prepend: 'mb-' }}"
    data-ride="carousel"
    data-pause="{% if section.settings.pause_hover %}hover{% else %}false{% endif %}"
    data-interval="{{ section.settings.interval | times: 1000 }}"
  >

    {% if section.settings.heading != blank %}
      <{{ section.settings.heading_size }} class="{{ section.settings.heading_alignment }}">
        {{ section.settings.heading | escape }}
      </{{ section.settings.heading_size }}>
    {% endif %}

    {% if section.settings.indicators %}
      <ol class="carousel-indicators">
        {% for block in section.blocks %}
          <li
            data-target="#{{ 'carousel-' | append: section.id }}"
            data-slide-to="{{ forloop.index0 }}"
            class="{% if forloop.first == true %} active {% endif %}"
          ></li>
        {% endfor %}
      </ol>
    {% endif %}

    <div class="carousel-inner">
      {% for block in section.blocks %}
        <div class="carousel-item {% if forloop.first == true %} active {% endif %}">

          {% if block.settings.image != blank %}
            <img
              class="d-block w-100 h-auto"
              src="{{ block.settings.image | img_url: '1920x640', crop: 'center' }}"
              srcset="
                {{ block.settings.image | img_url: '600x600', crop: 'center' }} 600w,
                {{ block.settings.image | img_url: '1200x400', crop: 'center' }} 1200w,
                {{ block.settings.image | img_url: '2400x800', crop: 'center' }} 2400w
              "
              alt="{{ block.settings.image.alt }}"
              width="1920"
              height="640"
            >
          {% else %}
            {% capture current %}{% cycle 1, 2 %}{% endcapture %}
            {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg d-block bg-secondary' }}
          {% endif %}

          {% if block.settings.caption_heading != blank or block.settings.caption_text != blank %}
            <div class="carousel-caption">
              {% if block.settings.caption_heading != blank %}
                <{{ block.settings.caption_heading_size }}>{{ block.settings.caption_heading }}</{{ block.settings.caption_heading_size }}>
              {% endif %}
              {% if block.settings.caption_text != blank %}
                <div class="rte">
                  {{ block.settings.caption_text }}
                </div>
              {% endif %}

              {% if block.settings.button_url != blank %}
                <a href="{{ block.settings.button_url }}" class="btn mb-3 {{ block.settings.button_style }}">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}

            </div>
          {% endif %}

        </div>
      {% endfor %}
    </div>

    {% if section.settings.controls %}
      <a class="carousel-control-prev" href="#{{ 'carousel-' | append: section.id }}" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">{{ 'carousel.previous' | t }}</span>
      </a>
      <a class="carousel-control-next" href="#{{ 'carousel-' | append: section.id }}" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">{{ 'carousel.next' | t }}</span>
      </a>
    {% endif %}

    {% if section.settings.progress_bar and section.settings.interval > 0 %}
      <div class="carousel-progress-bar"></div>
    {% endif %}

  </div>

</div>

<style>
#carousel-{{ section.id }} .carousel-item img,
#carousel-{{ section.id }} .carousel-item svg {
  object-fit: cover;
  min-height: {{ section.settings.img_min_height | append: 'px'}};
}

{% if section.settings.progress_bar and section.settings.interval > 0  %}
  #carousel-{{ section.id }} .carousel-progress-bar {
    z-index: 1;
    height: 3px;
    width: 0%;
    position: absolute;
    bottom: 0;
    left: 0;
    background: rgba(255, 255, 255, 0.75);
    border-radius: 3px;
  }
{% endif %}

{% if section.settings.full_height %}
  #carousel-{{ section.id }} .carousel-item img,
  #carousel-{{ section.id }} .carousel-item svg {
    width: 100%;
    height: 100vh;
  }
  #shopify-section-header {
    position: fixed;
    width: 100%;
  }
{% endif %}

{% if section.settings.zoom_effect %}
  #carousel-{{ section.id }} .carousel-inner .carousel-item > img,
  #carousel-{{ section.id }} .carousel-inner .carousel-item > svg {
    transform: scale(1.4);
    animation: carousel_zoom 12s ease-out;
  }
  @keyframes carousel_zoom {
    from {
       transform: scale(1);
    }
    to {
      transform: scale(1.4);
    }
  }
{% endif %}
</style>

<script>
window.addEventListener('DOMContentLoaded', (event) => {
  jQuery(document).ready(function ($) {

    {% if section.settings.progress_bar and section.settings.interval > 0  %}
      let percent = 0
      let progressBar = $('#carousel-{{ section.id }} .carousel-progress-bar')
      let carousel = $('#carousel-{{ section.id }}')

      function progressBarCarousel() {
        progressBar.css({
          width: percent + '%'
        })

        percent = percent + .1;

        if (percent > 100) {
          percent = 0
          carousel.carousel('next');
        }
      }

      carousel.carousel({
        interval: false,
        pause: true
      }).on('slid.bs.carousel', function () {

      })

      var progressBarInterval = setInterval(progressBarCarousel, {{ section.settings.interval }})

      carousel.hover(
        function() {
          clearInterval(progressBarInterval);
        },
        function() {
          progressBarInterval = setInterval(progressBarCarousel, {{ section.settings.interval }})
        }
      )
    {% endif %}

