        https://www.kondasoft.com
    */

    // Define elements
    const registerFormErrorEl = document.querySelector('#customer-register .errors');

    // Focus on error message after error form submit
    if (registerFormErrorEl) {
        registerFormErrorEl.setAttribute('tabindex', '-1');
        registerFormErrorEl.focus();
    }
</script>