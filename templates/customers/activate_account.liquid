    // Define elements
    const activateFormErrorEl = document.querySelector('#customer-activate .errors');

    // Focus on error message after error form submit
    if (activateFormErrorEl) {
        activateFormErrorEl.setAttribute('tabindex', '-1');
        activateFormErrorEl.focus();
    }
</script>