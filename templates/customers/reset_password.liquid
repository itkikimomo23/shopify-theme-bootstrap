    // Define elements
    const resetFormErrorEl = document.querySelector('#customer-reset .errors');

    // Focus on error message after error form submit
    if (resetFormErrorEl) {
        resetFormErrorEl.setAttribute('tabindex', '-1');
        resetFormErrorEl.focus();
    }
</script>